@model AvanzadaWeb.ViewModels.RecoverViewModel

@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_AuthLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Recuperar Contraseña</h3>
            </div>
            <div class="card-body">
                @if (TempData["VerificationCode"] != null)
                {
                    <div class="alert alert-info" role="alert">
                        <h5>Código de verificación (solo para desarrollo):</h5>
                        <h4 class="text-center">@TempData["VerificationCode"]</h4>
                        <p class="small">En una aplicación real, este código se enviaría por email.</p>
                    </div>
                }

                @if (Model == null)
                {
                    <div class="alert alert-danger" role="alert">
                        Error: El modelo no está inicializado correctamente.
                    </div>
                }
                else
                {
                    <form asp-action="Recover">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @if (!Model.CodeSent)
                        {
                            <p class="text-center">Ingresa tu email para recibir un código de verificación.</p>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="control-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-3">
                                <input type="submit" value="Enviar código" class="btn btn-primary w-100" />
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="CodeSent" value="true" />

                            <p class="text-center">Ingresa el código de verificación y tu nueva contraseña.</p>

                            <div class="form-group mb-3">
                                <label asp-for="VerificationCode" class="control-label">Código de verificación</label>
                                <input asp-for="VerificationCode" class="form-control" />
                                <span asp-validation-for="VerificationCode" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="NewPassword" class="control-label">Nueva contraseña</label>
                                <input asp-for="NewPassword" type="password" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ConfirmPassword" class="control-label">Confirmar nueva contraseña</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-3">
                                <input type="submit" value="Restablecer contraseña" class="btn btn-primary w-100" />
                            </div>
                        }
                    </form>
                }

                <div class="text-center mt-3">
                    <a asp-action="Login">Volver al inicio de sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}