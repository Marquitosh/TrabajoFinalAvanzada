@model AvanzadaWeb.ViewModels.LogsIndexViewModel
@{
    ViewData["Title"] = "Gestión de Logs";
    Layout = "_UserLayout";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4">
            <i class="bi bi-journal-text"></i> Gestión de Logs del Sistema
        </h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @* <!-- Filtros -->
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <form method="get" asp-action="ManageLogs" class="row g-3">
                    <div class="col-md-3">
                        <label for="fechaDesde" class="form-label">Fecha Desde</label>
                        <input type="date" class="form-control" id="fechaDesde" name="fechaDesde"
                               value="@Model.FechaDesde?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="fechaHasta" class="form-label">Fecha Hasta</label>
                        <input type="date" class="form-control" id="fechaHasta" name="fechaHasta"
                               value="@Model.FechaHasta?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="nivel" class="form-label">Nivel</label>
                        <select class="form-select" id="nivel" name="nivel">
                            <option value="">Todos</option>
                            <option value="Info" selected="@(Model.Nivel == "Info")">Info</option>
                            <option value="Warning" selected="@(Model.Nivel == "Warning")">Warning</option>
                            <option value="Error" selected="@(Model.Nivel == "Error")">Error</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="usuario" class="form-label">Usuario</label>
                        <input type="text" class="form-control" id="usuario" name="usuario"
                               value="@Model.Usuario" placeholder="Filtrar por usuario" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Filtrar
                        </button>
                        <a asp-action="ManageLogs" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Limpiar Filtros
                        </a>
                    </div>
                </form>
            </div>
        </div> *@

        <!-- Tabla de Logs -->
        @if (Model.Logs != null && Model.Logs.Any())
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th style="width: 5%">ID</th>
                                    <th style="width: 12%">Fecha</th>
                                    <th style="width: 15%">Usuario</th>
                                    <th style="width: 20%">Acción</th>
                                    <th style="width: 33%">Descripción</th>
                                    <th style="width: 8%">Nivel</th>
                                    <th style="width: 12%">IP Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.Logs)
                                {
                                    <tr>
                                        <td class="text-muted">@log.IDLog</td>
                                        <td>
                                            <small>
                                                <i class="bi bi-calendar3"></i> @log.Fecha.ToString("dd/MM/yyyy")<br />
                                                <i class="bi bi-clock"></i> @log.Fecha.ToString("HH:mm:ss")
                                            </small>
                                        </td>
                                        <td>
                                            <strong>@log.Usuario</strong>
                                        </td>
                                        <td>
                                            <code class="bg-light p-1 rounded">@log.Accion</code>
                                        </td>
                                        <td>@log.Descripcion</td>
                                        <td>
                                            <span class="badge
                                                        @(log.Nivel == "Error" ? "bg-danger" :
                                                                                                    log.Nivel == "Warning" ? "bg-warning text-dark" :
                                                                                                    "bg-info text-dark")">
                                                                                                                      <i class="bi
                                                            @(log.Nivel == "Error" ? "bi-exclamation-triangle-fill" :
                                                                                                         log.Nivel == "Warning" ? "bi-exclamation-circle-fill" :
                                                                                                         "bi-info-circle-fill")"></i>
                                        @log.Nivel
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @(string.IsNullOrEmpty(log.IPAddress) ? "-" : log.IPAddress)
                                    </small>
                                </td>
                            </tr>
                                                        }
                            </tbody>
                        </table>
                    </div>

                    <!-- Información de resultados -->
                    <div class="mt-3 text-muted">
                        <small>
                            Mostrando @Model.Logs.Count() registro(s)
                        </small>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-secondary text-center py-5">
                <i class="bi bi-journal-text fs-1 text-muted"></i>
                <h5 class="mt-3">No se encontraron logs</h5>
                <p class="text-muted">No hay registros que coincidan con los filtros aplicados.</p>
            </div>
        }
    </div>
</div>

<style>
    .table-responsive {
        max-height: 600px;
        overflow-y: auto;
    }

    .table thead {
        position: sticky;
        top: 0;
        z-index: 10;
    }

    code {
        font-size: 0.85em;
    }
</style>