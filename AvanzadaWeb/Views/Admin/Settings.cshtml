<div class="card shadow-sm mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Tipos de Combustible</h5>
        <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#modalAddCombustible">
            <i class="bi bi-plus-circle"></i> Nuevo
        </button>
    </div>
    <div class="card-body">
        @if (Model.TiposCombustible.Any())
        {
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>Descripción</th>
                        <th style="width: 120px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TiposCombustible)
                    {
                        <tr>
                            <td>@item.Descripcion</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" title="Editar"
                                        onclick="openEditCombustibleModal(@item.IdCombustible, '@item.Descripcion')">
                                    <i class="bi bi-pencil-fill"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" title="Eliminar"
                                        onclick="confirmDeleteCombustible(@item.IdCombustible, '@item.Descripcion')">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info mb-0">No hay tipos de combustible definidos.</div>
        }
    </div>
</div>

